{% extends "_layouts/cp" %}
{% import "_includes/forms" as forms %}

{% do view.registerAssetBundle("marbles\\smokesignal\\assetbundles\\smokesignal\\SmokeSignalAsset") %}
{% do view.registerAssetBundle("marbles\\smokesignal\\assetbundles\\indexcpsection\\IndexCPSectionAsset") %}

{# Link for the ? icon at the bottom of the page #}
{% set docsUrl = "???" %}

{# The title of this CP section #}
{% set title = "Smoke Signal" %}

{# The URL to this plugin's base CP section #}
{% set pluginCpUrl = url('smoke-signal') %}

{# Get a URL to an image in our AssetBundle #}
{% set iconUrl = view.getAssetManager().getPublishedUrl('@marbles/smokesignal/assetbundles/indexcpsection/dist', true) ~ '/img/Index-icon.svg' %}

{# Content that should appear in the page header#}
{% block actionButton %}
    <a href="{{ pluginCpUrl }}" class="btn icon submit">{{ 'Save'|t('smoke-signal') }}</a>
{% endblock %}

{# The content of the CP Section#}
{% set content %}

{{ forms.textField({
  label: 'Message'|t('smoke-signal'),
  instructions: 'Put your short message here'|t('smoke-signal'),
  id: 'signalMessage',
  name: 'signalMessage',

}) }}

{# INPUT: Link field #}
{{ forms.textField({
  label: 'Link'|t('smoke-signal'),
  instructions: 'Where the signal message should link to'|t('smoke-signal'),
  type: 'url',
  id: 'signalLink',
  name: 'signalLink',
}) }}

{# INPUT: Color field #}
{{ forms.textField({
  label: 'Color'|t('smoke-signal'),
  instructions: 'Pick a color for the banner'|t('smoke-signal'),
  id: 'signalColor',
  name: 'signalColor'
}) }}

{# INPUT: Icon Field #}
{{ forms.textField({
  label: 'Icon'|t('smoke-signal'),
  instructions: 'Pick an icon (optional)'|t('smoke-signal'),
  id: 'signalIcon',
  name: 'signalIcon'
}) }}

{% endset %}
